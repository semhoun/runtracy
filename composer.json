{
    "name": "semhoun/slim-tracy",
    "description": "Tracy for Slim4 Framework Debugger",
    "license": "Apache-2.0",
    "type": "library",
    "keywords": [
        "Slim Framework",
        "runtracy",
        "Tracy",
        "Debug bar",
        "Debugbar",
        "Debugger",
        "Eloquent ORM",
        "illuminate database",
        "PTY Terminal",
        "Profiler",
        "Slim4",
        "Slim 4",
        "Twig",
        "Idorm",
        "Doctrine DBAL"
    ],
    "authors": [
        {
            "name": "Konstantin Kaluzhnikov",
            "email": "k.kaluzhnikov@gmail.com",
            "homepage": "https://github.com/EvilKraft"
        },
        {
            "name": "Nathanael Semhoun",
            "email": "nathanael@semhoun.net",
            "homepage": "http://www.semhoun.net"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-mbstring": "*",
        "ext-json": "*",
        "tracy/tracy": "^2.10",
        "slim/slim": "^4.9"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "nunomaduro/phpinsights": "^2.11",
        "phpunit/phpunit": "^10.0",
        "illuminate/database": "^10.0",
        "twig/twig": "^3.3",
        "slim/twig-view": "^3.3",
        "j4mie/idiorm": "^1.5",
        "doctrine/orm": "^2.11"
    },
    "autoload": {
        "psr-4": {
            "SlimTracy\\": "src/SlimTracy"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@phpunit"
        ],
        "phpunit": "php vendor/bin/phpunit",
		"check": "phpinsights --config-path=./phpinsights.php",
        "fix": "phpinsights --config-path=./phpinsights.php -- fix"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
